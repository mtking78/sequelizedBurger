</div><!-- /container -->
<script type="text/javascript">
    function validateInput() {
        $("#addburger").on("submit", function(event) {
            event.preventDefault();

            if ($("#newburger").val() === "") {
                $("#inputModal").modal("show");
                return false;
            };
        });
    }
</script>